@model IEnumerable<Post>
@{
    ViewData["Title"] = "Posts";
}

<div class="text-center m-3">
    @if (ViewBag.Categories != null)
    {
        @foreach(var category in ViewBag.Categories)
        {
            <a asp-controller="Post" asp-action="Index" asp-route-categoryId="@category.Id"
           class="badge bg-warning text-decoration-none ms-2"> @category.Name</a>
        }
    }
</div>
<div class="text-end my-2">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Post">Create New Post</a>
</div>

<div class="row row-cols-3 g-4">
    @foreach(var post in Model)
    {
        <div class="cols">
            <div class="card h-100 border-0 shadow-lg rounded-1">
                <img src="@post.FeathureImagePath"
                class="card-img-top"
                     alt="@post.Title" style="height: 300px; object-fit: cover;">

                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>

                    <p class="text-muted mb-2">Published On @post.PublishedDate.ToString("MM,dd,yyyy")</p>

                    <div class="card-text">
                        @(post.Content.Length > 100 ? post.Content.Substring(0, 100) + "..." : post.Content)                    
                    </div>

                    <span class="badge bg-secondary">@post.Category?.Name</span>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <a class="btn btn-primary btn-sm">Rede More</a>
                    <div class="text-end">
                        <div class="text-muted">By @post.Author</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>