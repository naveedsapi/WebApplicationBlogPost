@using WebApplicationBlogPost.Models.ViewModels

@model CategoryViewModel
@{
    ViewData["Title"] = "Add New Category";
}


<style>
    .content-wraper {
        padding: 10px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif
    }
</style>


<div class="content-wraper">


    <div class="row">
        <div class="form-group">
            <h2>@ViewData["Title"]</h2>
        </div>
        

    </div>
    <hr />
    
    <form asp-action="Create" asp-controller="Category" method="post" enctype="multipart/form-data">

        <div class="validation-summary">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="form-group">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

       
        <div class="form-group">
            <label asp-for="Category.Description"></label>
            <input asp-for="Category.Description" class="form-control" />
            <span asp-validation-for="Category.Description" class="text-danger"></span>
        </div>
        
       
        <button type="submit" class="btn btn-primary mt-1">Add New Category</button>
        <a class="btn btn-secondary mt-1">Back to List</a>

    </form>
    <hr />
   
</div>
