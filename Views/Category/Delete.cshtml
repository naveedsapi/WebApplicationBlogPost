
@model Category
@{
    ViewData["Title"] = "Deleting Category";
}

<div class="form-group mt-3">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

<div class="form-group">
    <h4>Do you Wante to Delete This Category</h4>
</div>


<div class="row">
    <div class="form-group">
        <form asp-controller="Category" asp-action="DeleteConfirm">
            <input asp-for="@Model.Id" hidden />
            <button type="submit" class="btn btn-danger mt-2">Delete Category</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-primary mt-2">Cancel</a>
        </form>
       
         
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-2 text-end text-md-center">
        <p class="badge bg-warning">@Model.Id</p>
    </div>
    <div class="col-2 text-start ">
        <p class="badge bg-warning">@Model.Name</p>
    </div>
    <div class="col-8 text-start">
        <p class="badge bg-warning">@Model.Description</p>
    </div>
    <hr />
</div>

