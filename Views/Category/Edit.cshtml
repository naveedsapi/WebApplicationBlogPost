@using WebApplicationBlogPost.Models.ViewModels

@model EditCategoryViewModel
@{
    ViewData["Title"] = "Update Category";
}



<style>
    .content-wraper {
        padding: 10px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif
    }
</style>


<div class="content-wraper">


    <div class="row">
        <div class="form-group">
            <h2>@ViewData["Title"]</h2>
        </div>


    </div>
    <hr />

    <form asp-action="Edit" asp-controller="Category" method="post" enctype="multipart/form-data">

       
        <div class="validation-summary">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <input asp-for="@Model.Category.Id" hidden />
        <div class="form-group">
            <label asp-for="@Model.Category.Name"></label>
            <input asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="@Model.Category.Description"></label>
            <input asp-for="@Model.Category.Description" class="form-control" />
            <span asp-validation-for="@Model.Category.Description" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-1">Update Category</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary mt-1">Back to List</a>

    </form>
    <hr />

</div>
